# Smart Canteen System - Environment Configuration

# Database Configuration
DATABASE_PATH=./data/canteen.db
DATABASE_BACKUP_INTERVAL=24  # hours
DATABASE_BACKUP_RETENTION=30  # days

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your-secret-key-here

# Analytics Configuration
PREDICTION_UPDATE_INTERVAL=60  # minutes
STATISTICS_RETENTION_DAYS=365

# Features Configuration
ENABLE_DEMAND_PREDICTION=true
ENABLE_AUTO_BACKUP=true
ENABLE_DETAILED_LOGGING=true

# Development Settings
ENABLE_DEBUG_MODE=true
ENABLE_SAMPLE_DATA=true
AUTO_RESET_DAILY_STATS=false
